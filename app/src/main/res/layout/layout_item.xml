<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal"
        android:padding="10sp">

        <RadioButton
            android:id="@+id/radioButton_task"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_weight="1"
            android:text="RadioButton" />

        <ImageButton
            android:id="@+id/button_trash"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:background="@drawable/custom_image_button_item"
            android:scaleType="fitCenter"
            android:src="@drawable/trash" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_important"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:padding="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/not_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="Not important"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="Important"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_urgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:padding="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/not_urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="Not Urgent"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="Urgent"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/do_now"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="Do now" />

        <ImageButton
            android:id="@+id/button_share"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_margin="5sp"
            android:background="@drawable/custom_image_button_item"
            android:padding="5sp"
            android:scaleType="fitCenter"
            android:src="@drawable/share" />
    </LinearLayout>
</LinearLayout>
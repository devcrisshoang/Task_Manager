<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="Add New Task" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:text="Task name"
        android:textSize="15sp"
        android:textStyle="bold" />
    <EditText
      android:id="@+id/editText_write"
      android:layout_width="match_parent"
      android:layout_height="155dp"
      android:ems="10"
      android:hint="Write task here"
      android:background="@drawable/back_ground_edittext"
      android:inputType="text"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
      android:gravity="top|start" />

    <SeekBar
        android:id="@+id/seekBar_important"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:thumb="@drawable/baseline_downhill_skiing_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/not_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="Not important"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="Important"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_urgent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:thumb="@drawable/baseline_directions_bike_24"
        android:padding="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/not_urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="Not Urgent"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="Urgent"
            android:textAlignment="viewEnd" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_calender"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:scaleType="fitCenter"
        android:src="@drawable/calendar"></ImageButton>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add reminder"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_weight="1">
    </TextView>

    <Button
        android:id="@+id/button_add_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp"
        android:text="Add task" />



</LinearLayout>